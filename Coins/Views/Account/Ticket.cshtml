@{
    ViewData["Title"] = "Account";
}
<!-- Page Header Start -->
<div id="pageHeader">
    <div class="container">
        <div class="section--title">
            <div class="row">
                <div class="col-md-6">
                    <!-- Page Title Start -->
                    <h2>Ticket <span>Page</span></h2>
                    <!-- Page Title End -->
                </div>
                <div class="col-md-6">
                    <!-- Page Breadcrumb Start -->
                    <div class="page-header--breadcrumb">
                        <ul class="breadcrumb">
                            <li>Deposit: @ViewBag.User.Deposit BTC</li>
                            <li>Balance: @ViewBag.User.Balance BTC</li>
                        </ul>
                    </div>
                    <!-- Page Breadcrumb End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Blog Area Start -->
<div id="blog">
    <div class="container">
        <div class="row">
            <!-- Blog Content Start -->
            <div class="blog--content col-md-8">
                <!-- Blog Post Start -->
                <article class="blog--post">
                    <!-- Blog Post Title Start -->
                    <div class="blog--post-title">
                        <h2>Message</h2>
                    </div>
                    <div class="blog--post-content">
                        @ViewBag.Ticket.Message
                    </div>
                    <div class="blog--post-content">
                        <h3>Responses list</h3>


                        <ul class="list-group">
                            @{
                                foreach (var item in ViewBag.Responses)
                                {
                                    <li class="list-group-item">@item.Text <br /><br /> <i>@item.Date</i></li>
                                }
                                }
                        </ul>
                        <form action="/account/ResponseToTicket/@ViewContext.RouteData.Values["id"]" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Message *</label>
                                <textarea class="form-control" rows="5" name="Text" required="required"></textarea>
                                <span class="highlight"></span>
                            </div>
                            <input type="submit" class="btn--primary btn--ripple" value="Send" />
                        </form>
                    </div>
                    <!-- Blog Post Content End -->
                </article>
                <!-- Blog Post End -->
            </div>
            <!-- Blog Content End -->
            @Html.Partial("~/Views/Shared/_LayoutNavigation.cshtml");
        </div>
    </div>
</div>
<!-- Blog Area End -->
