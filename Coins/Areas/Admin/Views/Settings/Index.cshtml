@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Header Start -->
<div id="pageHeader">
    <div class="container">
        <div class="section--title">
            <div class="row">
                <div class="col-md-6">
                    <!-- Page Title Start -->
                    <h2>Admin <span>Page</span></h2>
                    <!-- Page Title End -->
                </div>
                <div class="col-md-6">
                    <!-- Page Breadcrumb Start -->
                    <div class="page-header--breadcrumb">
                        <ul class="breadcrumb">
                            <li>Hello Admin!</li>
                        </ul>
                    </div>
                    <!-- Page Breadcrumb End -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Blog Area Start -->
<div id="blog">
    <div class="container">
        <div class="row">
            <!-- Blog Content Start -->
            <div class="blog--content col-md-8">
                <!-- Blog Post Start -->
                <article class="blog--post">
                    <!-- Blog Post Title Start -->
                    <div class="blog--post-title">
                        <h2>Settings</h2>
                    </div>
                    <div class="blog--post-content">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <form action="/admin/settings/update" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <label>Wallet address</label>
                                        <input type="text" class="form-control" name="WalletAddress" value="@ViewBag.Settings.WalletAddress" placeholder="Enter wallet address" required="required" />
                                        <span class="highlight"></span>
                                    </div>
                                    <input type="submit" class="btn--primary btn--ripple" value="Change data" />
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Blog Post Content End -->
                </article>
                <!-- Blog Post End -->
            </div>
            <!-- Blog Content End -->
            @Html.Partial("~/Views/Shared/_AdminLayoutNavigation.cshtml");
        </div>
    </div>
</div>
<!-- Blog Area End -->
